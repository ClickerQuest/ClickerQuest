<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Gold_Count"
        android:layout_width="104dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:background="#BD3BED"
        android:text="Gold"
        android:textColor="#00ccff"
        android:textSize="40dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/upgrade_rows"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/Gem_Count"
        android:layout_width="104dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="#b6d7a8"
        android:text="Gems"
        android:textColor="#f99514"
        android:textSize="40dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/upgrade_rows"
        app:layout_constraintStart_toEndOf="@+id/Gold_Count"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Attack_power_Count"
        android:layout_width="104dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="#e29720"
        android:text="Attack Power"
        android:textColor="#f44336"
        android:textSize="22dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/upgrade_rows"
        app:layout_constraintStart_toEndOf="@+id/Gem_Count"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/upgrade_rows"
        android:layout_width="411dp"
        android:layout_height="590dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom_navigation" />

    <ImageButton
        android:id="@+id/_activesetting"
        android:layout_width="88dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/upgrade_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Attack_power_Count"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_manage" />

</androidx.constraintlayout.widget.ConstraintLayout>